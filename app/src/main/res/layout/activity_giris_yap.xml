<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.GirisYapActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f48fb1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="ÜYE GİRİŞİ"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/login" />

        <EditText
            android:id="@+id/mailEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:hint="Mail adresiniz.."
            android:inputType="textEmailAddress"
            android:textColorHint="#000" />


        <EditText
            android:id="@+id/parolaEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:hint="Parolanız.."
            android:inputType="textPassword"
            android:textColorHint="#000" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/kayitButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="#556"
            android:onClick="GirisYapButton"
            android:text="GİRİŞ YAP"
            android:textColor="#c5cae9"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_margin="10dp"
            android:gravity="right"
            android:onClick="uyeOlEkraniGit"
            android:padding="10dp"
            android:text="Üye Değilim"
            android:textColor="#000"
            android:textStyle="bold" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>